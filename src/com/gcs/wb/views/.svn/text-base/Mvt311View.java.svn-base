    @Action
    public void chooseVal() {
        if (cbxRecvSloc.getSelectedIndex() == -1) {
            setRecSloc(null);
        } else {
            setRecSloc((SLoc) cbxRecvSloc.getSelectedItem());
        }
        dispose();
    }

    @Action
    public void lookupMat() {
        LookupMatView lmat = new LookupMatView(WeighBridgeApp.getApplication().getMainFrame());
        lmat.setLocationRelativeTo(WeighBridgeApp.getApplication().getMainFrame());
        WeighBridgeApp.getApplication().show(lmat);
        if (!lmat.isShowing()) {
            if (lmat.getfMaterial() != null && lmat.getfMaterial().getMaterialPK() != null) {
                txtMatnr.setText(lmat.getfMaterial().getMaterialPK().getMatnr());
                setSelMaterial(lmat.getfMaterial());
            }
            lmat.dispose();
            lmat = null;
        }
    }

