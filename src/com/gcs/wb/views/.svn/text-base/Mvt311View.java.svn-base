    public Mvt311View(java.awt.Frame parent, String recv_lgort, Material mat) {
        super(parent);
        initComponents();
        if (recv_lgort != null) {
            SLoc recv_sloc = entityManager.find(SLoc.class, new SLocPK(config.getsClient(), config.getwPlant(), recv_lgort));
            this.recSloc = recv_sloc;
        } else {
            this.recSloc = null;
        }
        if (this.recSloc == null) {
            cbxRecvSloc.setSelectedIndex(-1);
        } else {
            cbxRecvSloc.setSelectedItem(this.recSloc);
        }
        this.selMaterial = mat;
        if (this.selMaterial != null && this.selMaterial.getMaterialPK() != null) {
            txtMatnr.setText(this.selMaterial.getMaterialPK().getMatnr());
        }
    }

